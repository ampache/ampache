@import "~/stylus/settings/color.styl"

// TODO redo playlist display, not happy with current

.playlistItem
    display flex
    flex-direction column
    position relative

.details
    padding 10px
    display flex
    align-items: center
    flex-direction column

.name
    color cardTitleColor
    font-weight 700
    text-align: center

.meta
    text-align: center
    padding-bottom 10px

.itemCount
    font-weight 700

.owner
    color colorGray400

.rating
    padding-top 5px

.actions
    border-top 2px solid colorGray900
    display flex
    flex-direction row
    justify-content: center
    margin-top auto

    img
        width 42px
        padding: 9px
        display: inline-block
