@import "~stylus/sizes.styl"
@import "~stylus/color.styl"

.sidebar
  width: 180px
  border-right 2px solid colorGray900
  font-size 13px
  background-color colorGray800
  flex-shrink: 0;
  overflow: hidden
  will-change: transform
  
  position: absolute
  top 0;
  left 0
  bottom: 0
  z-index: 100
  display: flex;
  flex-direction: column

  @media all and (min-width: size-large)
    position: static;
    transform none !important;

  section
    padding-bottom 10px    

  section + section {
    padding-top 24px
  }
    
  a
    display flex
    padding 0 20px
    margin-top 3px
    line-height 34px
    justify-content: space-between
    align-items: center

    @media (any-hover: hover)
      &:hover
        color colorAmber500

  h4
    display inline
    font-size 15px
    padding 0 20px
    line-height: 1.5

  form
    display flex
    flex-direction column
    padding-top 5px
    
  input, select
    width 75%
    margin 5px 0

.sidebarInner
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: auto;
  padding: inherit

.menuList
  flex 1
  position: relative
  padding-top 20px
  padding-bottom 20px

  &:before
    content ''
    width 100%
    height: 40px
    pointer-events: none
    display block
    position absolute
    bottom 0
    mask-image linear-gradient(to bottom, rgba(black, 0), rgba(black, 0.5))
    background-color colorGray900
    background-image: 
      url("data:image/png;base64,");

.menuSettings
  flex-shrink: 0
  border-top: 2px solid colorGray700
  background-color colorGray800
  padding 15px 0 10px
  position relative



  
    