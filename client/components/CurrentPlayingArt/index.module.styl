@import "~/stylus/sizes.styl"
@import "~/stylus/color.styl"

.currentPlayingArt
  display inline-block
  margin-right 10px
  grid-column: 1;
  grid-row: 1;

  @media all and (min-width: size-small)
    grid-column: 1 / 2;
    grid-row: 1 / 3;

  @media all and (min-width: size-large)
    grid-column: 2;
    grid-row: 1 / 3;

  .albumArt
    display block
    width 64px
    height 64px
    background-color colorGray500
    flex-shrink 0
    overflow hidden

    @media all and (min-width: size-small)
      width 96px
      height 96px
      margin: 3px
      border-radius 2px

    @media all and (min-width: size-large)
      width 80px
      height 80px
      margin-left 0

    img
      height 100%
  


