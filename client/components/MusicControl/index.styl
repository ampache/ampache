@import "~/stylus/settings/color.styl"
@import "~/stylus/settings/sizes.styl"

.ratingBar
    margin 0 auto

.ratingBarContainer
    display none
    background-color colorGray900
    border-top 2px solid colorGray800
    padding 10px 0 12px
    position absolute
    bottom 100%
    right 0
    width 100vw

    @media all and (min-width: size-small)
        position static
        width auto
        display inline-block !important
        background-color transparent
        border-top 0
        padding-bottom 0
        grid-column 2 / 4;
        grid-row 2;

    @media all and (min-width: size-large)
        grid-column 4 / 5;
        grid-row 1 / 3;
        align-self center
        justify-self end
        padding 0
        margin-left 20px

    @media all and (min-width: size-x-large)
        margin-left 40px

.rating
    @media all and (min-width: size-small)
        display none

.musicControl
    display grid
    background-color colorGray800
    border-top 2px solid colorGray900
    position relative
    grid-template-rows auto auto auto auto
    grid-template-columns auto 1fr 50%;
    min-width 0;

    @media all and (min-width: size-small)
        grid-template-rows auto auto
        grid-template-columns auto 1fr 25% 25% 20px;

    @media all and (min-width: size-large)
        grid-template-rows 1fr auto
        grid-template-columns 180px auto 4fr auto auto auto auto

.seekbar
    width 100%
    grid-column 1 / 4;
    grid-row 2;

    @media all and (min-width: size-small)
        grid-column 3 / 5;
        grid-row 2;
        display flex
        align-self center

    @media all and (min-width: size-large)
        grid-column 3 / 6;
        grid-row 2;

.controls
    display flex
    flex-direction row
    justify-self end
    position relative
    align-self center
    grid-column 1 / 3;
    grid-row 4;
    margin-right 20px

    @media all and (min-width: size-small)
        grid-column 3 / 4;
        grid-row 1;
        margin 0

    @media all and (min-width: size-large)
        justify-self center
        grid-column 1;
        grid-row 1 / 3;

    & .active
        color colorAmber500

    img
        width 42px
        min-width 42px
        padding 9px

    .disabled
        pointer-events none
        color colorGray600

.playPause
    position relative
    z-index 1

    &:after
        content ''
        border 2px solid currentColor
        border-radius 999px
        position absolute;
        top 50%;
        left 50%;
        transform translateX(-50%) translateY(-50%);
        z-index -1
        width: 90%
        height 90%
        opacity 0.4

    @media (any-hover: hover)
        &:hover
            color colorAmber500

            :global .icon
                color currentColor

.secondaryControls
    display flex
    justify-self: start
    align-self: center
    grid-column: 3 / 4;
    grid-row: 4;
    margin-left: -20px

    @media all and (min-width: size-small)
        grid-column: 4 / 5;
        grid-row: 1;
        margin 0

    @media all and (min-width: size-large)
        justify-self: center
        padding 0 20px
        grid-column: 7 / 8;
        grid-row: 1 / 3;

    @media all and (min-width: size-x-large)
        padding 0 40px

.seekTimes
    display flex
    justify-content: space-between
    padding 0 5px
    line-height: 1
    color colorGray400
    grid-column: 1 / 8;
    grid-row: 3;

    @media all and (min-width: size-small)
        grid-column: 3 / 5;
        grid-row: 2;

    @media all and (min-width: size-large)
        grid-column: 5 / 6;
        grid-row: 1 / 3;
        align-self: center
        padding: 0
        margin-left 20px

    @media all and (min-width: size-x-large)
        margin-left 40px


.seekEnd
    @media all and (min-width: size-large)
        &:before
            content '/'
            display inline-block
            padding 0 5px

.volumeSlide
    display none
    align-self center
    width 100%

    @media all and (min-width: size-large)
        display flex
        width 100px
        margin-left 20px
        grid-column: 6 / 7;
        grid-row: 1 / 3;

    @media all and (min-width: size-x-large)
        margin-left 40px


// MUISLIDER OVERRIDES
.musicControl
    :global
        .MuiSlider-root
            color: colorAmber500
            padding: 10px 0
            display flex
            align-self center

        .MuiSlider-rail
            background-color colorGray900

        .MuiSlider-rail,
        .MuiSlider-track
            height: 3px

        .MuiSlider-root.Mui-disabled
            color transparent

        .MuiSlider-thumb:hover
            box-shadow: 0 0 0 8px rgba(colorAmber500, 0.16);

        .MuiSlider-track
            transition width 0.2s

        .MuiSlider-thumb
            transition left 0.2s