@import "~/stylus/color.styl"

.songBlock
  display flex
  width 450px
  height 90px
  cursor pointer
  border 1px solid transparent
  img
    width 20%
  .details
    padding-left 10px
    display flex
    flex-direction column
    justify-content space-around
    .bottom
      color #878787
      a
        clear both
        float left
        color inherit
  &.playing
    color currentlyPlayingColor
