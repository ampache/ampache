@import "~stylus/color.styl"
@import "~stylus/sizes.styl"

queuebarWidth = 280px

.queueBar
  width: queuebarWidth
  max-width: 90%;
  border-left 2px solid colorGray900
  background-color colorGray800
  user-select none
  flex-shrink: 0;
  will-change: transform
  display flex
  flex-direction: column
  
  position: absolute
  top 0;
  right 0
  bottom: 0
  z-index: 100

  @media all and (min-width: size-large)
    position: static;
    margin-left: -(queuebarWidth)

  &.visible
    @media all and (min-width: size-large)
      margin-left: 0

  .title
    text-align center
    padding 10px 0
    border-bottom: 2px solid colorGray700
    flex-shrink: 0
  .songs
    .emptyQueue
      margin auto
      padding: 20px

.queueList 
  position relative
  flex 1

.queueListInner
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: auto;
  padding: inherit