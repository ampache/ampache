@import "~stylus/color.styl"

.song
  display flex
  align-items center
  // padding 10px 5px
  // transition 0.1s background-color
  cursor pointer
  border 1px solid transparent
  border-bottom 1px solid colorGray700
  // min-height 65px

  .imageWrapper
    flex-shrink: 0
    padding: 2px

    img
      // border-radius: 2px
      width 50px
      height 50px
  .details
    flex 1
    overflow hidden
    text-overflow ellipsis
    white-space: nowrap
    padding-left 0.5rem
    .songName
      text-overflow ellipsis
      overflow hidden
      white-space: nowrap
      // color colorWhite
    .albumArtist
      text-overflow ellipsis
      overflow hidden
      white-space: nowrap
      font-weight: 700
      // font-size 12px
      // color #878787
      .gap
        margin 0 2px
  &:hover
    // border  1px solid linkHoverColor
  &.playing
    // background-color #4c4c4c
    color colorAmber500

.actions
  padding-right: 10px
  flex-shrink 0
  img
    width: 24px
    height: 100%;
    width: 100%
    padding: 4px
