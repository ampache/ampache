@import "~/stylus/settings/color.styl"
@import "~/stylus/settings/sizes.styl"

.albumDisplay
    background-color colorGray800
    border-radius: 0 0 5px 5px
    display flex
    flex-direction column
    width 100%
    height: 100%
    position relative
    overflow hidden

    &:hover
        .imageContainer:after
            @supports (backdrop-filter: blur(1px))
                backdrop-filter: blur(5px);

        .albumActions
            opacity 1
            pointer-events: auto
            background-color rgba(black, 0.85)
            @supports (backdrop-filter: blur(1px))
                background-color rgba(black, 0.6)

        .details
            color inherit

.imageContainer
    position relative
    width: 100%
    max-height: 100%
    margin: 0 auto
    z-index 1

    &:before
        content ''
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        border 2px solid colorGray800
        border-bottom 0
        mix-blend-mode: lighten

    &:after
        content ''
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        transition backdrop-filter .3s

    img
        object-fit: cover;
        width: 100%;
        height: 100%;
        max-width: 200px
        padding 15px 15px 0
        margin 0 auto

        @media all and (min-width: size-small)
            max-width: none
            padding 0

.albumActions
    display flex
    flex-direction column
    justify-content: center
    align-items: left
    font-weight 700
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    z-index 1
    transition opacity 100ms ease-out, background-color 0.3s
    opacity 0
    padding-left 20px
    padding-bottom 5px

    svg
        margin-left -20px
        position absolute

    img
        width 42px
        padding: 9px
        display: inline-block

.action
    padding 5px 0
    filter: drop-shadow(0 0 5px black)
    margin-left 16px
    cursor pointer
    color cardTitleColor

    &:hover
        color linkHoverColor

.rating
    margin 0 auto
    padding 4px 7px 0
    border-radius 999px
    background-color colorGray800
    position relative
    top -10px
    border-top 1px solid colorGray700
    z-index 1

.details
    display: flex
    flex-direction column
    width: auto
    min-width: 50%
    padding 15px
    padding-top 0

.albumName
    margin-bottom 5px
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight 700

.albumArtist
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;