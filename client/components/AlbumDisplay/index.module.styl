@import "~/stylus/color.styl"

.albumDisplayContainer

    .albumDisplay
        background-color colorGray800
        border-radius: 5px
        // margin-bottom 1.5rem
        display flex
        flex-direction row
        width 100%
        height: 100%
        user-select none
        -webkit-touch-callout none

    .imageContainer
        // outline: 1px solid red
        position relative
        padding: 2px
        width: 150px
        // flex: 1;
        max-height: 100%
        font-size 0

        img
            border-radius: 3px
            object-fit: cover;
            width: 100%;
            height: 100%;

    .details 
        display: flex
        flex-direction column
        width: auto
        min-width: 50%
        padding 0.5rem
        justify-content:  space-between

    .albumInfo
        
        

    .albumName
        color colorWhite
        margin-bottom 10px
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;  
        overflow: hidden;
        text-overflow: ellipsis;

    .albumArtist
        font-weight 700
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;

    .albumActions 
        display flex
        flex-direction row
        // justify-content: space-between
        // height 42px

        img
            width 42px
            padding: 9px
            display: inline-block
            // margin-right: 3px