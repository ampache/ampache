@import "~/stylus/color.styl"

.albumDisplay
    background-color colorGray800
    border-radius: 5px
    display flex
    flex-direction column
    width 100%
    height: 100%
    // user-select none
    // -webkit-touch-callout none
    position relative

    @media (any-hover: hover)
        &:hover 
            box-shadow 0 0 0 2px colorAmber800

    a
        position relative

    a.cardLink
      position: static 
      &:after
        content ''
        position absolute
        top 0
        left 0
        right 0
        bottom 0     

.imageContainer
    position relative
    padding: 10px 10px 2px
    width: 150px
    max-height: 100%
    font-size 0
    margin: 0 auto

    img
        border-radius: 3px
        object-fit: cover;
        width: 100%;
        height: 100%;

.details 
    display: flex
    flex-direction column
    width: auto
    min-width: 50%
    padding 10px
    justify-content:  space-between

.albumName
    color colorWhite
    margin-bottom 5px
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;  
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 13px

.albumArtist
    font-weight 700
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;

.albumMeta
    color colorGray400

.albumActions 
    border-top 2px solid colorGray900
    display flex
    flex-direction row
    justify-content: center
    margin-top auto

    img
        width 42px
        padding: 9px
        display: inline-block

.rating
    margin 0 auto
    padding-top: 5px 

    