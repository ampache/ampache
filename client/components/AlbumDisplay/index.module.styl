@import "~/stylus/color.styl"
@import "~/stylus/sizes.styl"

.albumDisplay
    background-color colorGray800
    border-radius: 5px
    display flex
    flex-direction column
    width 100%
    height: 100%
    position relative
    overflow hidden

    @media (any-hover: hover)
        &:hover 
            box-shadow 0 0 0 2px colorAmber800

.imageContainer
    position relative
    padding 15px 15px 0
    width: 100%
    max-width: 200px
    max-height: 100%
    font-size 0
    margin: 0 auto

    @media all and (min-width: size-small)
        max-width: none
        padding 0

    &:after
        content ''
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        border 2px solid colorGray800
        border-bottom 0
        mix-blend-mode: lighten

    img
        object-fit: cover;
        width: 100%;
        height: 100%;

.details 
    display: flex
    flex-direction column
    width: auto
    min-width: 50%
    padding 15px
    padding-top 0
    justify-content:  space-between

.albumName
    margin-bottom 5px
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;  
    overflow: hidden;
    text-overflow: ellipsis;
    font-weight 700
    font-size 13px

.albumArtist
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color colorGray400

.albumMeta
    color colorGray400

.albumActions 
    border-top 2px solid colorGray900
    display flex
    flex-direction row
    justify-content: center
    margin-top auto
    display none

    img
        width 42px
        padding: 9px
        display: inline-block

.rating
    margin 0 auto
    padding 4px 7px 0
    border-radius 999px
    background-color colorGray800
    position relative
    top -10px  
    border-top 2px solid colorGray700
    
    