@import "~stylus/sizes.styl"
@import "~stylus/color.styl"

.ratings
    display: flex
    align-items: center
    padding: inherit

    .heartIcon
        fill colorGray500
        cursor: pointer

        &.active
            fill colorRed500

    .starIcon
        fill colorGray500

        &.active
            fill colorAmber500

    .cancelIcon
        fill colorGray400
        transform scale(0.9)
        cursor: pointer

    .divider
        content: "";
        display: inline-block
        border-radius: 50%
        width 4px
        height 4px
        background-color colorGray400
        align-self: center
        margin: 0 5px
