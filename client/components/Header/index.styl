@import "~/stylus/settings/color.styl"
@import "~/stylus/settings/sizes.styl"

.header
    padding 3px 0
    background-color colorGray800
    border-bottom 2px solid colorGray900
    position relative
    flex-shrink 0;

    display grid
    column-gap 5px;
    grid-template-columns 60px 1fr 60px;

.logoContainer
    display none
    align-self center
    grid-column 1;
    padding-left 20px


    @media all and (min-width: size-large)
        display block

.logo img
    width 36px
    height 36px

.search
    margin 0 auto
    display flex
    align-items center
    grid-column 2;
    width 100%

    form
        width 100%
        display flex
        justify-content center

    input
        border-radius 3px
        border none
        line-height 32px
        background-color colorGray700
        color white
        width 100%
        max-width 300px
        margin 0 auto
        background-image url('https://img.icons8.com/cotton/64/000000/search.png')
        background-repeat no-repeat
        padding-left 35px
        background-size 24px
        background-position-y center
        background-position-x 5px

        &:focus
            box-shadow 0 0 0 2px colorAmber800

        &::placeholder
            color colorGray300

.options
    animation-direction reverse
    color white
    background-color #3d3d3d
    position absolute
    top headerHeight
    padding 10px
    padding-right 0
    display none
    width 150px

    &:after
        content ''
        display block
        position absolute
        bottom 100%
        right 17px
        width 0
        height 0
        border-bottom 10px solid #3d3d3d
        border-left 10px solid transparent
        border-right 10px solid transparent

    li
        color gray

        a
            color linkColor

.menuIcon
    margin-left 5px
    grid-column 1;

    @media all and (min-width: size-large)
        display none

.queueIcon
    grid-column 3;
    margin-left auto
    margin-right 6px