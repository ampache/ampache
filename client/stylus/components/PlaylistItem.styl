@import "~/stylus/color.styl"

.playlistItem
  background-color colorGray800
  border-radius: 5px
  display flex
  flex-direction column
  position relative

  @media (any-hover: hover)
    &:hover 
      box-shadow 0 0 0 2px colorAmber800 
      position: relative

  a
    position relative

  a.cardLink
    position: static 
    &:after
      content ''
      position absolute
      top 0
      left 0
      right 0
      bottom 0

.details
  padding 10px
  display flex
  align-items: center
  flex-direction column
  position relative

.name 
  color colorWhite
  font-weight 700
  font-size 16px
  text-align: center
  position relative

.meta
  text-align: center
  padding-bottom 10px

.itemCount
  font-weight 700

.owner
  color colorGray400

.rating
  // margin 0 auto
  padding-top 5px

.actions
  border-top 2px solid colorGray900
  display flex
  flex-direction row
  justify-content: center
  margin-top auto

  img
      width 42px
      padding: 9px
      display: inline-block
