@import "../color"

.ratingBar  
  margin 0 auto

.ratingBarContainer
  display none
  background-color colorGray900
  border-top 2px solid colorGray800
  padding 10px 0 12px
  position: absolute
  bottom 100%
  right 0
  width 100vw

  @media all and (min-width: size-small)
    position static
    width auto
    display flex
    background-color transparent
    border-top 0
    padding-bottom 0

.ratingShown .ratingBarContainer
  display flex

.rating
  @media all and (min-width: size-small)
    display none

.musicControl
  flex-shrink: 0;
  background-color colorGray800
  border-top 2px solid colorGray900
  align-items center

  &.ratingShown
    margin-top 40px // magic number due to absolute positioned rating :(

    @media all and (min-width: size-small)
      margin-top 0

  @media all and (min-width: size-small)
    display grid
    column-gap: 10px;
    grid-template-rows 1fr 1fr
    grid-template-columns: repeat(2, 1fr);
    padding-right: 10px

  @media all and (min-width: size-large)
    column-gap: 60px;
    grid-template-rows 1fr 1fr
    grid-template-columns: repeat(3, 1fr);

  .seekbar 
    @media all and (min-width: size-small)
      grid-column: 2;
      grid-row: 2;

  .controls
    display flex
    width 100%
    flex-direction column
    justify-self center

    @media all and (min-width: size-small)
      grid-column: 2;
      grid-row: 1;

    .playPause
      position relative
      z-index 1

      &:after
        content ''
        position absolute
        top 0
        right 0
        // background-color colorGray700
        border 2.5px solid colorGray700
        border-radius 50%
        z-index -1
        width: 100%
        height 100%
        transform scale(80%)


    .buttons
      margin-top 5px
      display flex
      justify-content center
      cursor pointer

      & .active
        color colorAmber500

      img
        width 42px
        min-width 42px
        padding 9px

      .disabled
        pointer-events none
        color colorGray600

  .seekTimes 
    display flex
    justify-content: space-between
    padding 0 5px
    line-height: 1

  .MuiSlider-root
    color: colorAmber500
    padding: 10px 0

  .MuiSlider-rail
    background-color colorGray900

  .MuiSlider-rail,
  .MuiSlider-track
    height: 3px

  .MuiSlider-root.Mui-disabled 
    color transparent
    
  .MuiSlider-thumb:hover
    box-shadow: 0px 0px 0px 8px rgba(colorAmber500, 0.16);

  .volumeSlide
    display none
    justify-content space-around
    min-width: 200px
    max-width: 10vw
    margin-left auto

    @media all and (min-width: size-large)
      display flex
      flex-direction: row
      justify-content: space-between
      align-items: center
      grid-column: 3;
      grid-row: 1 / 3;
      