.album-grid
    display: grid
    gap: 20px;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));

.artist-grid
    display: grid
    gap: 20px;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));

.song-list
    display: grid
    gap: 20px;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));